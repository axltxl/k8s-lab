{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "k8s/docker/build_images",
      "type": "shell",
      "command": "scripts/k8s/build_images.sh",
    },
    {
      "label": "k8s/apply",
      "type": "process",
      "command": "kubectl",
      "args": [
        "apply",
        "--recursive",
        "-f",
        "k8s"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": [
        "k8s/docker/build_images"
      ]
    }
  ]
}
