{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "k8s/set_ctx",
      "type": "process",
      "options": {
        "env": {
          "KUBECONFIG": "${workspaceFolder}/files/local/k8s/users/k8s-lab-admin.kubeconfig"
        },
      },
      "command": "kubectl",
      "args": [
        "config",
        "set-context",
        "k8s-lab-context"
      ]
    },
    {
      "label": "k8s/docker/build_images",
      "type": "shell",
      "command": "scripts/k8s/build_images.ps1",
    },
    {
      "label": "k8s/apply",
      "type": "process",
      "command": "kubectl",
      "args": [
        "apply",
        "--recursive",
        "-f",
        "k8s"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "KUBECONFIG": "${workspaceFolder}/files/local/k8s/users/k8s-lab-admin.kubeconfig"
        }
      },
      "dependsOrder": "sequence",
      "dependsOn": [
        "k8s/set_ctx",
        "k8s/docker/build_images",
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
